@using FLRC.Leaderboards.Core.Leaders
@model LeaderboardViewModel

@functions
{
	string monthStyle(byte? month) => Model.Month == month
		? "secondary"
		: "light";
}

@if (Model.Config.Features.Monthly && Model.Months.Count > 1)
{
	<div class="row mb-2">
		<div class="col-12 text-center">
			<div class="flex-wrap btn-group">
				<a class="btn btn-sm btn-@monthStyle(null)" href="/Leaderboard/Index/@Model.LeaderboardResultType">All</a>
				@foreach (var month in Model.Months)
				{
					<a class="btn btn-sm btn-@monthStyle((byte) month.Month)" href="/Leaderboard/Index/@Model.LeaderboardResultType/@month.Month">
						@month.ToString("MMMM")
					</a>
				}
			</div>
		</div>
	</div>
}